import random

def workout_decision(exercise="–±–∏—Ü–µ–ø—Å", intensity="—Å—Ä–µ–¥–Ω–µ"):
    exercises = {
        "–±–∏—Ü–µ–ø—Å": ["–ü–æ–¥—ä–µ–º —à—Ç–∞–Ω–≥–∏", "–ú–æ–ª–æ—Ç–∫–∏", "–ö–æ–Ω—Ü–µ–Ω—Ç—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã–π"],
        "—Ç—Ä–∏—Ü–µ–ø—Å": ["–ñ–∏–º –ª–µ–∂–∞", "–§—Ä–∞–Ω—Ü—É–∑—Å–∫–∏–π", "–†–∞–∑–≥–∏–±–∞–Ω–∏—è"],
        "–≥—Ä—É–¥—å": ["–ñ–∏–º —à—Ç–∞–Ω–≥–∏", "–†–∞–∑–≤–æ–¥–∫–∏", "–ë–∞–±–æ—á–∫–∞"]
    }
    
    reps_range = {
        "–ª–µ–≥–∫–æ": (12, 15),
        "—Å—Ä–µ–¥–Ω–µ": (8, 12), 
        "—Ç—è–∂–µ–ª–æ": (6, 10)
    }
    
    if exercise in exercises:
        ex = random.choice(exercises[exercise])
    else:
        ex = random.choice(exercises["–±–∏—Ü–µ–ø—Å"])
    
    if intensity in reps_range:
        reps = random.randint(*reps_range[intensity])
    else:
        reps = random.randint(8, 12)
    
    sets = random.randint(3, 5)
    
    return f"üí™ {ex}\nüìä {sets}√ó{reps}\nüéØ –í—Å–µ–≥–æ: {sets*reps} –ø–æ–≤—Ç–æ—Ä–æ–≤"

# –ü—Ä–∏–º–µ—Ä –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è
result = workout_decision("–±–∏—Ü–µ–ø—Å", "—Ç—è–∂–µ–ª–æ")
print(result)
