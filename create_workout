import random

def create_workout():
    exercises = ["–ü—Ä–∏—Å–µ–¥:3x8-12","–ñ–∏–º:4x6-10","–¢—è–≥–∞:3x8-12",
                 "–û—Ç–∂–∏–º–∞–Ω–∏—è:4xMAX","–ü—Ä–µ—Å—Å:3x15-20","–ü–ª–∞–Ω–∫–∞:3x30-60—Å"]
    
    warmup = random.choice(["–ö–∞—Ä–¥–∏–æ 5–º–∏–Ω","–°—É—Å—Ç–∞–≤—ã 5–º–∏–Ω","–†–∞–∑–º–∏–Ω–∫–∞ 5–º–∏–Ω"])
    cool = random.choice(["–†–∞—Å—Ç—è–∂–∫–∞ 5–º–∏–Ω","–ó–∞–º–∏–Ω–∫–∞ 3–º–∏–Ω"])
    
    main = random.sample(exercises, k=random.randint(3,4))
    
    workout = f"üî• *–¢–†–ï–ù–ò–†–û–í–ö–ê:*\n\nüèÉ‚Äç‚ôÇÔ∏è –†–∞–∑–º–∏–Ω–∫–∞:\n‚Ä¢ {warmup}\n\nüí™ –û—Å–Ω–æ–≤–Ω–æ–µ:\n"
    for i,ex in enumerate(main,1):
        workout += f"{i}. {ex}\n"
    
    workout += f"\nüßò‚Äç‚ôÇÔ∏è –ó–∞–º–∏–Ω–∫–∞:\n‚Ä¢ {cool}\n\nüí° –°–æ–≤–µ—Ç: {random.choice(['–ü–µ–π –≤–æ–¥—É','–û—Ç–¥—ã—Ö 60—Å','–¢–µ—Ö–Ω–∏–∫–∞ –≤–∞–∂–Ω–µ–µ –≤–µ—Å–∞'])}"
    
    return workout

print(create_workout())
print(f"–°–∏–º–≤–æ–ª–æ–≤: {len(create_workout())}")
