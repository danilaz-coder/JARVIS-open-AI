import random

class BicepsGen:
    def __init__(self):
        self.exercises = ["–ü–æ–¥—ä–µ–º —à—Ç–∞–Ω–≥–∏", "–ú–æ–ª–æ—Ç–∫–∏", 
                         "–ö–æ–Ω—Ü–µ–Ω—Ç—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã–π", "–ù–∞ —Å–∫–∞–º—å–µ –°–∫–æ—Ç—Ç–∞"]
        self.reps = {"–ª–µ–≥–∫–æ": (12,15), "—Å—Ä–µ–¥–Ω–µ": (8,12),
                    "—Ç—è–∂–µ–ª–æ": (6,10), "—Å–∏–ª–∞": (4,8)}
    
    def generate(self, intensity="—Å—Ä–µ–¥–Ω–µ", ex=None):
        exercise = ex if ex else random.choice(self.exercises)
        if intensity in self.reps:
            reps = random.randint(*self.reps[intensity])
        else:
            reps = random.randint(8,12)
        
        sets = random.randint(3,5)
        weight = self._calc_weight(intensity, reps)
        
        return (f"üí™ {exercise}\n"
                f"üìä {sets}√ó{reps}\n"
                f"üèãÔ∏è‚Äç‚ôÇÔ∏è ~{weight}–∫–≥\n"
                f"üéØ –í—Å–µ–≥–æ: {sets*reps} –ø–æ–≤—Ç–æ—Ä–æ–≤")
    
    def _calc_weight(self, intensity, reps):
        base = {"–ª–µ–≥–∫–æ":20, "—Å—Ä–µ–¥–Ω–µ":30, "—Ç—è–∂–µ–ª–æ":40, "—Å–∏–ª–∞":50}
        mult = {"–ª–µ–≥–∫–æ":0.8, "—Å—Ä–µ–¥–Ω–µ":1.0, "—Ç—è–∂–µ–ª–æ":1.2, "—Å–∏–ª–∞":1.5}
        
        if intensity in base:
            return int(base[intensity] * mult[intensity] * (15/reps))
        return 30
    
    def menu(self):
        levels = "\n".join([f"‚Ä¢ {lvl}: {a}-{b} –ø–æ–≤—Ç–æ—Ä–æ–≤" 
                           for lvl,(a,b) in self.reps.items()])
        return f"üèãÔ∏è‚Äç‚ôÇÔ∏è –ë–ò–¶–ï–ü–°\n\n–£—Ä–æ–≤–Ω–∏:\n{levels}\n\n–£–ø—Ä–∞–∂–Ω–µ–Ω–∏—è: {', '.join(self.exercises)}"

b = BicepsGen()
print(b.menu())
print(b.generate("—Ç—è–∂–µ–ª–æ"))
